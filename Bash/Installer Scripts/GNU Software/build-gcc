        olt_12="nvptx-none=/build/gcc-12-bTRWOB/gcc-12-12.2.0/debian/tmp-nvptx${install_prefix}"
        olt_12+=",amdgcn-amdhsa=/build/gcc-12-bTRWOB/gcc-12-12.2.0/debian/tmp-gcn${install_prefix}"
        execute autoreconf -fi
